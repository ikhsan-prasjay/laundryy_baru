<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tambah_layanan_Activity">

    <TextView
        android:id="@+id/tvtambahkan_layanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/tambah_layanan"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/namalengkaplayanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="40dp"
        android:text="namalayanan"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvtambahkan_layanan"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/etnama_lengkaplayanan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded"
        android:hint="   Nama layanan"
        android:layout_marginEnd="20dp"
        android:paddingLeft="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/namalengkaplayanan"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/hargalayanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="21dp"
        android:text="Harga"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/etnama_lengkaplayanan"
        tools:ignore="TextSizeCheck"
        tools:layout_editor_absoluteX="20dp" />

    <EditText
        android:id="@+id/ethargalayanan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded"
        android:hint="   Harga"
        android:inputType="number"
        android:layout_marginEnd="20dp"
        android:paddingLeft="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/hargalayanan"
        tools:layout_editor_absoluteX="-88dp" />

    <TextView
        android:id="@+id/cabanglayanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="21dp"
        android:text="Cabang"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/ethargalayanan"
        tools:ignore="TextSizeCheck"
        tools:layout_editor_absoluteX="20dp" />

    <EditText
        android:id="@+id/etcabanglayanan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded"
        android:layout_marginTop="10dp"
        android:hint="   Cabang"
        app:layout_constraintTop_toBottomOf="@id/cabanglayanan"
        android:layout_marginEnd="20dp"
        android:paddingLeft="5dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/btsimpanlayanan"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="SIMPAN"
        app:layout_constraintTop_toBottomOf="@+id/etcabanglayanan"
        tools:layout_editor_absoluteX="90dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>