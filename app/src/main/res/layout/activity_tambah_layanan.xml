<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Tambah_layanan_Activity">

    <TextView
        android:id="@+id/tvtambahkan_layanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/tambah_layanan"
        android:gravity="center"
        android:textColor="@color/grey_medium"
        android:textSize="28sp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/namalengkaplayanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="@string/namalayanan"
        android:textColor="@color/grey_text_dark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvtambahkan_layanan" />

    <EditText
        android:id="@+id/etnama_lengkaplayanan"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Nama Layanan"
        android:layout_marginEnd="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginStart="24dp"
        android:textColor="@color/grey_text_dark"
        android:textColorHint="@color/grey_medium"
        app:layout_constraintTop_toBottomOf="@id/namalengkaplayanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textCapWords" />

    <TextView
        android:id="@+id/hargalayanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:text="@string/harga"
        android:textColor="@color/grey_text_dark"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etnama_lengkaplayanan"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ethargalayanan"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Harga Layanan"
        android:inputType="numberDecimal"
        android:layout_marginEnd="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginStart="24dp"
        android:textColor="@color/grey_text_dark"
        android:textColorHint="@color/grey_medium"
        app:layout_constraintTop_toBottomOf="@id/hargalayanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cabanglayanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:text="@string/cabang"
        android:textColor="@color/grey_text_dark"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/ethargalayanan"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etcabanglayanan"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="8dp"
        android:hint="Cabang Layanan"
        android:layout_marginEnd="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginStart="24dp"
        android:textColor="@color/grey_text_dark"
        android:textColorHint="@color/grey_medium"
        app:layout_constraintTop_toBottomOf="@id/cabanglayanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textCapWords" />

    <Button
        android:id="@+id/btsimpanlayanan"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/button_simpan"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue_status"
        app:cornerRadius="12dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etcabanglayanan" />

</androidx.constraintlayout.widget.ConstraintLayout>