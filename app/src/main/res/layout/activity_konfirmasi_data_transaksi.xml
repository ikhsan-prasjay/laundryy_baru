<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Konfirmasi_data_Transaksi_Activity">

    <!-- Header Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Judul -->
            <TextView
                android:id="@+id/tvJudulKonfimasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/KonfirmasiDataTransaksi"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Data Pelanggan Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_background"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DataPelanggan"
                    android:textStyle="bold"
                    android:textColor="#2E5BFF"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <!-- Nama Pelanggan -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/nama"
                        android:textColor="#1A1A1A"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": "
                        android:textColor="#1A1A1A"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvNamaPelangganKonfirmasi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nama Pelanggan"
                        android:textSize="14sp"
                        android:textColor="#1A1A1A"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Nomor HP -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/etcard_nohp"
                        android:textColor="#1A1A1A"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": "
                        android:textColor="#1A1A1A"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvNoHPKonfimasi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nomor HP"
                        android:textSize="14sp"
                        android:textColor="#1A1A1A"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/contentCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintBottom_toTopOf="@id/totalCardkonfirmasi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Label Layanan Utama -->
            <TextView
                android:id="@+id/labelLayananUtamaKonfimasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/layananutama"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="12dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <!-- Layanan Utama Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_background"
                android:padding="12dp"
                android:layout_marginBottom="20dp">

                <!-- Nama Layanan -->
                <TextView
                    android:id="@+id/tvNamaLayananKonfimasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/namalayanan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_marginBottom="4dp" />

                <!-- Harga -->
                <TextView
                    android:id="@+id/tvHargaLayananKonfimasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:textSize="14sp"
                    android:textColor="#019BDE"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Label Layanan Tambahan -->
            <TextView
                android:id="@+id/labelLayananTambahanKonfimasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/layanantambahan"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="12dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <!-- List Tambahan -->
            <ListView
                android:id="@+id/listLayananTambahanKonfimasi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@android:color/transparent"
                android:dividerHeight="8dp"
                android:scrollbars="vertical"
                android:fadingEdge="vertical"
                android:fadingEdgeLength="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Total Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/totalCardkonfirmasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#E8F5E8"
        app:layout_constraintBottom_toTopOf="@id/layoutButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">

        <!-- Layout Total Bayar -->
        <LinearLayout
            android:id="@+id/layoutTotalBayarKonfimasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_duek"
                android:layout_marginEnd="12dp"
                app:tint="#2E7D32" />

            <TextView
                android:id="@+id/tvTotalLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/totalbayar"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#2E7D32" />

            <TextView
                android:id="@+id/tvTotalHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#1B5E20"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@android:color/white"
                android:padding="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tombol Batal dan Pembayaran -->
    <LinearLayout
        android:id="@+id/layoutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnBatal"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/batal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#FF6B35"
            android:layout_marginEnd="8dp"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/btnPembayaran"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/pembayaran"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:layout_marginStart="8dp"
            android:stateListAnimator="@null" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>