<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Judul -->
    <TextView
        android:id="@+id/tvJudulpembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pembayaran"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subjudul -->
    <TextView
        android:id="@+id/tvSubjudulpembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PilihMetodePembayaran"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvJudulpembayaran"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Garis pemisah -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#333"
        app:layout_constraintTop_toBottomOf="@id/tvSubjudulpembayaran"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Stack Card Pembayaran -->
    <LinearLayout
        android:id="@+id/Layoupembayarant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubjudulpembayaran"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Card 1: Bayar Nanti -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_bayarnanti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:clickable="true"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F44336">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/bayarnanti"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="16dp"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <!-- Card 2: Tunai -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTunai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FFC107">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/cardTunai"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="16dp"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <!-- Card 3: QRIS -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardQris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FF9800">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="QRIS"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="16dp"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <!-- Card 4: DANA -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardDana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#03A9F4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="DANA"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="16dp"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <!-- Card 5: GoPay -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardGopay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#4CAF50">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="GoPay"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="16dp"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <!-- Card 6: OVO -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardOvo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#9C27B0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="OVO"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="16dp"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Tombol Batal -->
    <TextView
        android:id="@+id/tvbatal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="19dp"
        android:layout_marginEnd="164dp"
        android:text="@string/batal"
        android:textColor="#FD1313"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Layoupembayarant" />

</androidx.constraintlayout.widget.ConstraintLayout>