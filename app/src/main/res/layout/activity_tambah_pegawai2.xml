<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tambah_pegawai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Tambah_PegawaiActivity2">

    <TextView
        android:id="@+id/tv_title_pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="TAMBAH PEGAWAI"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/grey_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nama_pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="Nama Lengkap"
        android:textSize="16sp"
        android:textColor="@color/grey_text_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_pegawai" />

    <EditText
        android:id="@+id/et_nama_pegawai"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Nama Lengkap Pegawai"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/grey_text_dark"
        android:textColorHint="@color/grey_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_pegawai"
        android:inputType="textCapWords" />

    <TextView
        android:id="@+id/tv_alamat_pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:text="Alamat"
        android:textColor="@color/grey_text_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_nama_pegawai" />

    <EditText
        android:id="@+id/et_alamat_pegawai"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/grey_text_dark"
        android:background="@drawable/rounded_edittext"
        android:hint="Alamat Lengkap Pegawai"
        android:textColorHint="@color/grey_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_alamat_pegawai"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/tv_no_hp_pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:text="No HP Aktif"
        android:textColor="@color/grey_text_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_alamat_pegawai" />

    <EditText
        android:id="@+id/et_no_hp_pegawai"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:inputType="phone"
        android:textColor="@color/grey_text_dark"
        android:background="@drawable/rounded_edittext"
        android:hint="Nomor HP Pegawai"
        android:textColorHint="@color/grey_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_no_hp_pegawai" />

    <TextView
        android:id="@+id/tvCabangPegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:text="@string/cabang"
        android:textColor="@color/grey_text_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_no_hp_pegawai" />

    <EditText
        android:id="@+id/et_Cabang_pegawai"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/grey_text_dark"
        android:background="@drawable/rounded_edittext"
        android:hint="Cabang Pegawai"
        android:textColorHint="@color/grey_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCabangPegawai"
        android:inputType="textCapWords" />

    <Button
        android:id="@+id/btn_simpan_pegawai"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:text="@string/button_simpan"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/blue_status"
        app:cornerRadius="12dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_Cabang_pegawai"/>
</androidx.constraintlayout.widget.ConstraintLayout>