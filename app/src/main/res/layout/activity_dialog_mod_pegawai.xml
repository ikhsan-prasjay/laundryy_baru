<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Judul -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailpegawai"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#333333"
            android:paddingBottom="12dp" />

        <!-- Fungsi reusable baris data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID Pegawai"
                android:textColor="#666" />

            <TextView
                android:id="@+id/tvDIALOG_PEGAWAI_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P001284"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#DDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/namapegawai"
                android:textColor="#666" />

            <TextView
                android:id="@+id/tvDIALOG_PEGAWAI_NAMA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budi Santoso"
                android:textStyle="bold"
                android:textColor="#1976D2" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#DDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/etcard_alamat"
                android:textColor="#666" />

            <TextView
                android:id="@+id/tvDIALOG_PEGAWAI_ALAMAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jl. Mawar No. 45, Jakarta"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#DDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/etcard_nohp"
                android:textColor="#666" />

            <TextView
                android:id="@+id/tvDIALOG_PEGAWAI_NOHP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0812-3456-7890"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#DDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/card_cabang"
                android:textColor="#666" />

            <TextView
                android:id="@+id/tvDIALOG_PEGAWAICABANG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cabang Jakarta"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Tombol Aksi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btDIALOG_MOD_PEGAWAI_Edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Sunting"
                android:textColor="#FFF"
                android:backgroundTint="#0288D1" />

            <Button
                android:id="@+id/btDIALOG_MOD_PEGAWAI_Hapus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#D32F2F"
                android:text="@string/Hapus"
                android:textColor="#FFF" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>