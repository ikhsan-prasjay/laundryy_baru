<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.ega.laundry.cabang.TambahCabangActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tv_title_CABANG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:text="@string/TAMBAH_CABANG" android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/grey_text_dark"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_nama_CABANG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/namaCabang"
            android:textSize="16sp"
            android:textColor="@color/grey_text_dark" />

        <EditText
            android:id="@+id/et_nama_CABANG"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Nama Lengkap Cabang"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/grey_text_dark"
            android:textColorHint="@color/grey_medium"
            android:inputType="textCapWords" />

        <TextView
            android:id="@+id/tv_alamat_CABANG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="@string/Mamat" android:textSize="16sp"
            android:textColor="@color/grey_text_dark" />

        <EditText
            android:id="@+id/et_alamat_CABANG"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Alamat Lengkap Cabang"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/grey_text_dark"
            android:textColorHint="@color/grey_medium"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/tv_no_hp_CABANG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="@string/nomer" android:textSize="16sp"
            android:textColor="@color/grey_text_dark" />

        <EditText
            android:id="@+id/et_no_hp_CABANG"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Nomor HP Cabang"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="phone"
            android:textColor="@color/grey_text_dark"
            android:textColorHint="@color/grey_medium" />

        <Button
            android:id="@+id/btn_simpan_CABANG"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            android:text="@string/button_simpan" android:textColor="@android:color/white"
            android:backgroundTint="@color/blue_status"
            app:cornerRadius="12dp"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>